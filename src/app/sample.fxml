<GridPane alignment="center" hgap="10" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" prefHeight="258.0" prefWidth="420.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.Controller">
   <children>
      <Slider fx:id="speed_slider" max="5000.0" min="100.0" onMouseReleased="#setSpeed" value="1000.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <Button fx:id="connect_button" mnemonicParsing="false" onMouseClicked="#connect" text="Connect" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
      <TextField fx:id="ip_typed" alignment="CENTER" promptText="INTechOS IP" GridPane.rowIndex="4" />
      <Label text="INTechOS Remote Controller" GridPane.rowIndex="2" />
      <Label fx:id="status" text="Waiting for connection..." GridPane.columnIndex="2" GridPane.rowIndex="4" />
      <Label fx:id="speed_info" text="Speed : 1000" GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
      <Label text="Use arrow keys to pilot" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
   </children>
   <columnConstraints>
      <ColumnConstraints maxWidth="190.0" minWidth="10.0" prefWidth="190.0" />
      <ColumnConstraints maxWidth="150.0" minWidth="10.0" prefWidth="43.0" />
      <ColumnConstraints maxWidth="195.0" minWidth="150.0" prefWidth="167.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="39.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="64.0" minHeight="10.0" prefHeight="63.0" />
      <RowConstraints maxHeight="39.0" minHeight="10.0" prefHeight="27.0" />
      <RowConstraints maxHeight="67.0" minHeight="10.0" prefHeight="41.0" />
      <RowConstraints maxHeight="35.0" minHeight="10.0" prefHeight="35.0" />
   </rowConstraints>
</GridPane>
